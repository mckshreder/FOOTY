
<div class = "video-container-create">
<h1 class="jumbotron">Create New Post</h1>
<% flash.each do |key, value| %>
    <h4><%= value %></h4>
<% end %>

<%= form_for(@posts) do |f| %>

    <div class="form-group">
    <%= f.label 'Title' %>
    <%= f.text_field :title, class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label 'Caption' %>
    <%= f.text_field :body, class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label 'Paste YouTube Url' %>
    <%= f.url_field :youtube_url, class: "form-control" %>
    </div>
    
    <div class="form-group">
    <%= f.label 'Or Paste Image Url' %>
    <%= f.url_field :image_url, class: "form-control" %>
    </div>

    <%= f.submit "Post", class: "submit-button-create" %>

<% end %>

<h1 class="jumbotron">Create New Event</h1>

<%= form_for(@events) do |f| %>

    <div class="form-group">
    <%= f.label 'Title' %>
    <%= f.text_field :title, class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label 'Caption' %>
    <%= f.text_field :date, class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label 'Paste YouTube Url' %>
    <%= f.text_field :location, class: "form-control" %>
    </div>
    
    <div class="form-group">
    <%= f.label 'Or Paste Image Url' %>
    <%= f.text_field :info, class: "form-control" %>
    </div>

    <%= f.submit "Event", class: "submit-button-create" %>

<% end %>

</div>